<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.beka.mapper.UserMapper">
    <select id="findByUsername" resultType="io.beka.model.data.UserData">
        select * from user where username = #{username}
    </select>
    <select id="findByEmail" resultType="io.beka.model.data.UserData">
        select * from user where username = #{email}
    </select>
    <select id="findById" resultType="io.beka.model.data.UserData">
        select * from user where id = #{id}
    </select>
</mapper>
